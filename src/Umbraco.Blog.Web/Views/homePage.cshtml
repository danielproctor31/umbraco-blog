@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Blog.Domain.ViewModels.HomePageViewModel>
@{
	Layout = "master.cshtml";
}

<h1>@Model.Title</h1>

@if(Model?.BlogListing.Items != null)
{
	@foreach(var blog in Model.BlogListing.Items)
	{
		<a href="@blog.Url"><h3>@blog.Title</h3></a>
		<i class="fa-regular fa-calendar-days"></i>
		<span><i>@blog.CreateDate.ToString("MMM dd, yyyy | 'at' hh:mm tt")</i></span>
	}
}
<br/>
<br/>
<span><a href="/blog">All Posts <i class="fa-solid fa-arrow-right"></i></a></span>